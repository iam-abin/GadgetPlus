<body>
    <section class="vh-100" style="background-color: #f0f1f4">
        <div class="container py-4 h-100">
            <div
                class="row d-flex justify-content-center align-items-center h-100"
            >
                <div class="col col-xl-5 col-md-5 text-center col-lg-5">
                    <div
                        class="card shadow border"
                        style="
                            border-radius: 20px;
                            margin-top: 50px;
                            margin-bottom: 90px;
                        "
                    >
                        <div class="card-body">
                            <form action="/otp-user" method="post">
                                <div id="sender">
                                    <div class="d-flex align-items-center pb-1">
                                        <h3
                                            class="mx-auto font-weight-bold mt-2"
                                        >
                                            LOGIN WITH OTP
                                        </h3>
                                    </div>
                                    <div class="form-outline mb-2 text-center">
                                        <label for="" class="py-2"
                                            >Enter your Mobile Number</label
                                        >
                                        <input
                                            type="text"
                                            id="number"
                                            class="form-control form-control-lg"
                                            name="phone"
                                        />
                                    </div>
                                    <div
                                        id="recaptcha-container"
                                        class="pl-4"
                                    ></div>
                                    <span
                                        id="senderErr"
                                        class="justify-content-center text-danger"
                                    ></span>
                                    <div class="pt-3">
                                        <!-- <button type="button" onclick="phoneAuth()" class="btn btn-block" style="width: 100%;">SEND
                      OTP</button> -->
                                        <input type="submit" value="Send otp" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

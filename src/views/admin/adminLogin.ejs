

<title>Admin</title>
<link rel="icon" type="image/png" sizes="32x32" href="/user/assets/images/icons/favicon-32x32.png">
<link href="/admin/assets/css/main.css" rel="stylesheet" type="text/css" />

<link rel="stylesheet" href="/admin/assets/css/adminCss/login.css">

<section class="content-main mt-80 mb-80">
    <div class="card mx-auto card-login">
        <div class="card-body">
            <h2 class="card-title mb-4 text-center font-weight-bold">
                Admin Login
            </h2>
            <form action="/admin/adminLogin" method="post">
                <div class="mb-3">
                    <input
                        class="form-control"
                        placeholder="Email"
                        type="text"
                        name="email"
                    />
                </div>
                <div class="mb-3">
                    <input
                        class="form-control"
                        placeholder="Password"
                        type="password"
                        name="password"
                    />
                </div>
                <br /><br />
                <div class="mb-4">
                    <button type="submit" class="btn btn-primary w-100">
                        Login
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
